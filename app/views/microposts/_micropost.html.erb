<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user">
  <% if logged_in? %>
  <%= link_to micropost.user.name, micropost.user %> 
  <% else %>
  <%= link_to micropost.user.name, login_path %> 
  <% end %>
  đã đăng một 
  <%= link_to "bài viết", micropost %>
  </span><br>
   <span class="title"><%= micropost.created_at %></span><br>
   <span class="title"><%= micropost.title %></span><br>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Đã đăng <%= time_ago_in_words(micropost.created_at) %> trước.
    <% if current_user?(micropost.user) %>
      <%= link_to "Xóa bài đăng", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
      <%= link_to "Edit bài đăng", edit_micropost_path(micropost) %>                                 
    <% end %>
   
  </span>
</li>