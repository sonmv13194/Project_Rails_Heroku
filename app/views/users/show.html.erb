<% provide(:title, @user.name) %>
<div class="user-infor-item">
<div class="col-sm-2"></div>
<div class="col-sm-8">
<div class="personal-infor">
<div class="row">
  <aside class="col-md-12">
  
  <div class="col-md-2">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
    </section>
    </div>
    <div class="col-md-8">
    <section class="stats">
    <p class="stats-name"><%= @user.name %></p>
      <%= render 'shared/stats' %>
    </section>
    <% if current_user?(@user) %>
    <p class="setting-user"><%= link_to "Chỉnh sửa cá nhân", edit_user_path(current_user) %></p>
       <section class="micropost_form">
         <%= render 'shared/micropost_form' %>
      </section>
  <% end %>
    </div>
  </aside>
<div class="personal-post">
  <div class="col-md-12">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
     
  </div>
</div>

<div>
</div>
</div>
<div class="col-sm-2"></div>
</div>